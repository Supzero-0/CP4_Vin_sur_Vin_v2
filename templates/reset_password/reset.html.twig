{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row mx-5">
			<div class="mt-3 mx-5">
				<div class="align-middle mx-5">
					<h1 class="text-center m-5">Changement de mot de passe</h1>
					<div class="bg-primary p-3 shadow rounded-4">
						{{ form_start(resetForm) }}
						{{ form_row(resetForm.plainPassword) }}
						<button class="btn btn-success">Modifier le mot de passe</button>
						{{ form_end(resetForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
