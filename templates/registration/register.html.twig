{% extends 'base.html.twig' %}

{% block title %}Création d'un compte
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container">
		<div class="row mx-4">
			<div class="mx-4 my-4">
				<div class="align-middle d-flex flex-column align-items-center">
					<h1 class="text-center col-6 m-3">Création d'un compte</h1>
					<div class="bg-primary col-6 shadow rounded m-3">
						<div class="d-flex flex-column px-4 py-3">
							{{ form_start(registrationForm) }}
							{{ form_row(registrationForm.email) }}
							{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
							{{ form_row(registrationForm.agreeTerms) }}

							<button type="submit" class="btn btn-success">S'enregistrer</button>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
